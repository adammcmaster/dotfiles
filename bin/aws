#!/bin/bash

docker pull astopy/aws-cli >/dev/null 2>&1 &

if [ -z "AWS_ACCESS_KEY_ID" ]
then
    VAULT="aws-vault exec default --"
else
    VAULT=""
fi

exec $VAULT docker run -it --rm -v $HOME/.aws/:/root/.aws -v /Users:/Users -w $PWD -e AWS_DEFAULT_REGION -e AWS_ACCESS_KEY_ID -e AWS_SECRET_ACCESS_KEY -e AWS_SESSION_TOKEN -e AWS_SECURITY_TOKEN astopy/aws-cli $*
